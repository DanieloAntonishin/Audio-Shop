@model AudioShop.Models.AccountModelSignUp;
<div class="container product-block-top text-center">
    <h1>Sign Up</h1>
    <h2><span asp-validation-for="Role"></span></h2>
    <div class="container-fluid col-7">
        <form asp-antiforgery="true" asp-action="SignUp" asp-controller="Account">
            <div>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Login"></label><br />
                    <input class="form-control" type="text" asp-for="Login" />
                    <span asp-validation-for="Login"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label><br />
                    <input class="form-control" type="password" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div>
                    <br />
                    <button type="submit" class="btn-secondary"> Sign Up </button>
                </div>
            </div>
        </form>
    </div>
    <br />
    <div class="product-block-top">
        <small class="text-muted">You don`t have account?</small>
        <br />
        <a asp-action="Registration" asp-controller="Account">Registration</a>
    </div>
</div>
@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
